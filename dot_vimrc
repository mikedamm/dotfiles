set tabstop=4
set shiftwidth=8
set autoindent
set list listchars=tab:▷▷⋮
set noexpandtab
colorscheme onedark
syntax on

let g:better_whitespace_enabled=1
let g:airline_powerline_fonts = 1
execute pathogen#infect()

filetype plugin indent on
set hlsearch
set smartcase
set number
set display+=lastline
set scrolloff=2
set sidescrolloff=5
set ruler
set cursorline
set visualbell
set title
set autoread

map <C-o> :NERDTreeToggle<CR>
